<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.GridPane?>

<MenuBar GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="TOP" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectbidding.controller.AdminMenuController">
    <menus>
        <Menu mnemonicParsing="false" text="Projects">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#showProjectSearch" text="Search and delete" />
                <MenuItem mnemonicParsing="false" onAction="#showProjectAdd" text="Create a new project" />
                <MenuItem mnemonicParsing="false" onAction="#showProjectEdit" text="Update project" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Contractors">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#showContractorSearch" text="Search and delete contractors" />
                <MenuItem mnemonicParsing="false" onAction="#showContractorAdd" text="Add a new contractor" />
                <MenuItem mnemonicParsing="false" onAction="#showContractorEdit" text="Update contractor information" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Changes">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#showChangeLog" text="Change log" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Log out">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#logOut" text="Log out" />
         </items></Menu>
    </menus>
</MenuBar>
